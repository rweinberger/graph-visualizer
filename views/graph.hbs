{{> head}}
<script src="https://d3js.org/d3.v4.min.js"></script>
<script src="/scripts/graph.js"></script>

<body>
  <p id='name' name={{name}}><a href="/">~</a>/<a href="/home">hbd</a>/<a href="/saved">saved</a>/{{name}}</p><br>
  <svg id='svg' width='960' height='500'></svg><br><br>
  <label>- <input style="width:240px;" type="range" min="0.5" max="1" step="any" value="0.5"> +</label><br><br>
